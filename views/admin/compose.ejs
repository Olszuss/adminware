<%- include("../partials/header"); -%>

<h1>Compose</h1>
<form action="/compose" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label>Title</label>
        <input type="text" class="form-control" name="postTitle" required autocomplete="off" value=<% if(formTitle){%><%=formTitle%><%}%>>
    </div>
    <div class="form-group">
        <label>Post</label>
        <textarea name="postArea" class="form-control" cols="30" rows="10" required><% if(content){%><%=content%><%}%></textarea>
    </div>
    <div class="form-group">
        <label>Image</label>
        <input type="file" name="image" accept="image/*" />
            <p><%=warning%></p>
        </div>
    <button type="submit" class="button">Publish</button>

</form>

<%- include("../partials/footer"); -%>