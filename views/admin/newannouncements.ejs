<%- include("../partials/header"); -%>




<section id="admin">

    <form action="/admin/announcements/new" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label>Title</label>
            <input type="text" class="form-control" name="announceTitle" required autocomplete="off">
        </div>
        <div class="form-group">
            <label>Post</label>
            <textarea name="announceArea" class="form-control" cols="30" rows="10" required></textarea>
        </div>
        <div class="checkbox-admin">
            <label>Post aktywny</label>
            <input type="checkbox" name="announceActive" value="yes">
        </div>
        <button type="submit" class="button">Publish</button>
    
    </form>

</section>

